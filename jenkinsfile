node('python2.7') {
    gitlabCommitStatus('sm-gitlab') {
        stage('Initialize') {
            checkout scm
        }

        stage('Environment') {
            println 'Setup Environment'

            if (isUnix()) {
                sh 'make venv'
                sh 'make install'
            } else {
                bat 'make venv'
                bat 'make install'
            }
        }

        stage('Test') {
            println 'Test all the things'

            timeout(15) {
                if (isUnix()) {
                    sh 'make test'
                } else {
                    bat 'make test'
                }
            }
        }
    }
}
